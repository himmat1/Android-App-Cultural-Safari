<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itp341.singh.himmat.finalprojhimmatsinghitp341.ReligionInfoFragment"
    android:id="@+id/frameReligionInfo"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/religionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="ACTIVITY_TITLE" />

        <Button
            android:id="@+id/button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/religionName"
            android:layout_alignEnd="@+id/scrollView"
            android:text="Send"
            android:visibility="invisible" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/button_send"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/aboutSection">

            <TextView
                android:id="@+id/textAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp" />
        </ScrollView>

        <TextView
            android:id="@+id/aboutSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/scrollView"
            android:text="About:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/scrollView"
            android:layout_marginTop="23dp"
            android:text="Prophets: "
            android:textColor="#000000"
            android:textIsSelectable="false"
            android:textSize="16sp" />
        <ScrollView
            android:id="@+id/scrollViewProphet"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/textView3">
        <TextView
            android:id="@+id/text_prophets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/scrollView"
            android:layout_alignTop="@+id/textView3"
            android:layout_toEndOf="@+id/textViewB"
            android:textColor="#000000"
            android:textSize="16sp" />
        </ScrollView>

        <TextView
            android:id="@+id/textViewP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="23dp"
            android:text="Belief In God: "
            android:textColor="#000000"
            android:textIsSelectable="false"
            android:textSize="16sp" />

        <ScrollView
            android:id="@+id/scrollViewGod"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/textViewP"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/textViewP">

            <TextView
                android:id="@+id/text_god"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/scrollView"
                android:layout_alignTop="@+id/textViewP"
                android:layout_toEndOf="@+id/textViewP"
                android:textColor="#000000"
                android:textSize="16sp" />
        </ScrollView>

        <TextView
            android:id="@+id/textViewB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewP"
            android:layout_marginTop="23dp"
            android:text="Holy Book: "
            android:textColor="#000000"
            android:textIsSelectable="false"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewB"
            android:layout_alignBottom="@+id/textViewB"
            android:layout_toEndOf="@+id/textViewP"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewB"
            android:layout_marginTop="32dp"
            android:text="Friends"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ListView
            android:id="@+id/listFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView4"
            android:layout_toEndOf="@+id/textView4" />

    </RelativeLayout>


</FrameLayout>
